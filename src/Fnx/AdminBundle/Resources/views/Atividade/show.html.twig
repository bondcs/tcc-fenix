{% block menuContent %}
    <div id="menuContent">
        <h3>Atividade : {{ atividade.nome }}</h3>
        <ul>

            {% if (atividade.arquivado) %}
                <li><a class="unarquive-link dialog-confirm-link" href="{{ path('atividadeAtivar',{'id' : atividade.id})}}"><span></span>Ativar</a></li>
                <li><a class="back-link" href="{{ path('atividadeArquivado')}}"><span></span>Voltar</a></li>
            {% else %}
                <li><a class="arquive-link dialog-confirm-link" href="{{ path('atividadeArquivar',{'id' : atividade.id})}}"><span></span>Arquivar</a></li>
                <li><a class="back-link" href="{{ path('atividadeHome')}}"><span></span>Voltar</a></li>
            {% endif %}
        </ul>
    </div>
{% endblock %}

{% block conteudo %}
    {% if atividade.servico.nome == 'Segurança de Evento'%}
        {% include 'FnxAdminBundle:Servico:segurancadeevento.html.twig' %}
    {% endif %}

    {% if atividade.servico.nome == 'Vigilância Eletrônica'%}
        {% include 'FnxAdminBundle:Servico:monitoramento.html.twig' %}
    {% endif %}

    {% if atividade.servico.nome == 'Verificação de Propriedade'%}
        {% include 'FnxAdminBundle:Servico:verificacao.html.twig' %}
    {% endif %}

    {% if atividade.servico.nome == 'Administração'%}
        {% include 'FnxAdminBundle:Servico:admin.html.twig' %}
    {% endif %}
{% endblock %}

