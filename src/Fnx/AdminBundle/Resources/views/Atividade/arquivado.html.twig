{% extends "FnxAdminBundle::layout.html.twig" %}
{% block title %} Atividade {% endblock %}
{% block menuContent %}

 <div id="menuContent">
      <h3>Gerenciamento: Atividades Arquivadas</h3>
      <ul>
         <li><a route="atividadeDelete" class="delete-link confirm-link" href="#"><span></span>Deletar</a></li>
         <li><a class="back-link" href="{{ path("atividadeHome")}}"><span></span>Voltar</a></li>
      </ul>
</div>

{% endblock %}

{% block subMenu %}
<div id="subMenu">
    <ul>
        <li><a href="{{ path("atividadeHome")}}">Ativos</a></li>
    </ul>
</div>
{% endblock %}

{% block conteudo %}
<div class="box-table">
<table class="tablePlugin doubleclick data" route="atividadeShow">
    <thead>
        <tr>

            <th style="width: 400px;">Nome</th>
            <th>Servi√ßo</th>
            <th>Cliente</th>
            <th class="hide">Id</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.nome }}</td>
            <td>{{ entity.servico.nome}}</td>
            <td>{{entity.contrato.cliente.nome}}</td>
            <td class="id">{{ entity.id }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>

{% endblock %}
