{% extends "FnxAdminBundle::layout.html.twig" %}

{% block title %} Formulário {% endblock %}

{% block menuContent %}
    <div id="menuContent">
        <h3>Gerenciamento: Formulário de Serviço</h3>
        <ul>
            <li><a class="back-link" href="{{ path('funcionario_servico_escala')}}"><span></span>Voltar</a></li>
        </ul> 
    </div>
{% endblock %}

{% block conteudo %}
<div class="ui-panel-content ui-widget-content " style="width:auto">
   <h4 class="ui-panel-title ui-widget-header empty-title"></h4>
    <div id="box-form">
        <form novalidate="" class="cms" action="{{ path('funcionario_servico_escala_create') }}" method="post" {{ form_enctype(form) }}>
             {{form_errors(form)}}
        <div class="myform">
            <div class="inputExtendido">
                {{ form_errors(form.nome)}}
                {{ form_label(form.nome)}}    
                {{ form_widget(form.nome)}}
            </div>

            <div>
                {{ form_errors(form.descricao)}}
                {{ form_label(form.descricao)}}    
                {{ form_widget(form.descricao)}}
            </div>
         </div>   
            {{ form_row(form._token) }}
            <input type="submit" value="Submit"/>
        </form>
    </div>
</div>

{% endblock %}
