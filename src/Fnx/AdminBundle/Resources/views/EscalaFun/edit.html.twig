<div class="box-form-dialog">

    <form novalidate="" id="form" action="{{path('escalaFunUpdate', {'id' : id})}}" method="POST" class="cms ajaxFormTable">
    <div class="myform">
            {{ form_errors(form) }}

                    <div class="datepicker">
                        {{ form_errors(form.inicio)}}
                        {{ form_label(form.inicio)}}
                        {{ form_widget(form.inicio)}}<br>
                    </div>

                    <div class="datepicker">
                        {{ form_errors(form.fim)}}
                        {{ form_label(form.fim)}}
                        {{ form_widget(form.fim)}}<br>
                    </div>

                    <div>
                        {{ form_errors(form.local)}}
                        {{ form_label(form.local)}}
                        {{ form_widget(form.local)}}<br>
                    </div>

                    <div>
                        {{ form_errors(form.descricao)}}
                        {{ form_label(form.descricao)}}
                        {{ form_widget(form.descricao)}}<br>
                    </div>

                    <div>
                        {{ form_errors(form.servicoEscala)}}
                        {{ form_label(form.servicoEscala)}}
                        {{ form_widget(form.servicoEscala)}}<br>
                    </div>

  </div>
                    <h5 style="text-align: center; margin-bottom: 5px; font-size: 19px !important">{{ form_label(form.funcionarios)}}</h5>
                    <div class="erro-multiselect">
                    {{ form_errors(form.funcionarios)}}
                    </div>
                    <div>
                    {{ form_widget(form.funcionarios, {'attr' : {'class' : 'multiselect'} })}}<br>
                    </div>
             {{ form_row(form._token) }}

        <input class="close" type="button" onclick="dialogClose()" value="Fechar"/>
        <input type="submit" value="Submit"/>
    </form>
</div>
