{% extends "FnxAdminBundle::layout.html.twig" %}
{% block title %} Salário {% endblock %}

{% block menuContent %}

    <div id="menuContent">
        <h3>Gerenciamento: Salário de Funcionários</h3>
        <ul>
            <li><a class="config-link ajax-link" href="{{ path('configEdit')}}"><span></span>Config</a></li>
            <li><a class="back-link" href="{{ path('funcionarioHome')}}"><span></span>Voltar</a></li>
        </ul>
    </div>

{% endblock %}

{% block subMenu %}
<div id="subMenu">
    <ul>
        <li><a href="{{ path("funcionarioHome")}}">Funcionários</a></li>
    </ul>
</div>
{% endblock %}

{% block conteudo %}
     <div>
       <div class="box-filter">
        <form novalidate="novalidate" class="filter" method="POST" action="">
            {{form_errors(formFilter)}}
            <div class='bold'>
                   {{ form_errors(formFilter.meses)}}
                   {{ form_label(formFilter.meses)}}
                   {{ form_widget(formFilter.meses,{'attr' : {'class' : 'mes'}})}}
            </div>
            <div class='bold'>
                   {{ form_errors(formFilter.ano)}}
                   {{ form_label(formFilter.ano)}}
                   {{ form_widget(formFilter.ano,{'attr' : {'class' : 'ano'}})}}
            </div>
        </form>
       </div>
       <hr style="margin-top: 1%; margin-bottom:1%">
       <div class="box-table">
           <table class="tableSalario redraw data">
                <thead>
                    <tr>
                        <th style="width: 3%"></th>
                        <th class="left">Nome</th>
                        <th style="width: 10%">Salário</th>
                        <th style="width: 10%">Á pagar</th>
                        <th style="width: 20%">Último pagamento</th>
                        <th>id</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
           <form id="formSalario" action="" method="POST">
            <table class="tableSalario redraw data">
                 <thead>
                     <tr>
                         <th style="width: 3%"></th>
                         <th class="left">Nome</th>
                         <th style="width: 10%">Salário</th>
                         <th style="width: 10%">Bônus</th>
                         <th style="width: 10%">Dependentes</th>
                         <th style="width: 20%">Último pagamento</th>
                         <th style="width: 10%">Total</th>
                         <th>id</th>
                         <th>pagamentoId</th>
                     </tr>
                 </thead>
                 <tbody></tbody>
            </table>
           </form>
         </div>
    </div>


{% endblock %}