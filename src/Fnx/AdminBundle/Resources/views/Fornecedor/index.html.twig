{% extends "FnxAdminBundle::layout.html.twig" %}
{% block title %} Gerenciamento de Fornecedores {% endblock %}
{% block menuContent %}

 <div id="menuContent">
      <h3>Gerenciamento: Lista de fornecedores</h3>
      <ul>
         <li><a class="new-link" href="{{ path('adm_fornecedor_new')}}"><span ></span>Novo</a></li>
         <li><a route="adm_fornecedor_edit" class="edit-link" href="#"><span></span>Editar</a></li>
         <li><a route="adm_fornecedor_delete" class="delete-link confirm-link" href="#"><span></span>Deletar</a></li>
      </ul> 
</div>

{% endblock %}

{% block conteudo %}
<div class="box-table">
    <table class="tablePlugin doubleclick">
    <thead>
        <tr>
            
            <th style="width: 400px;">Nome</th>
            <th>Telefone</th>
            <th>Id</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{entity.nome }}</td>
            <td>{{entity.telefone }} </td>
            <td class="id">{{ entity.id }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>

{% endblock %}
