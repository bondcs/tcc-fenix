<div class="box-filter">
    <form class="filter" method="POST" action="">
        {{form_errors(formFilter)}}
        <div class="bold tipoData">
               {{ form_errors(formFilter.tipo_data)}}
               {{ form_label(formFilter.tipo_data)}}
               {{ form_widget(formFilter.tipo_data)}}
        </div>

        <div class='picker bold'>
               {{ form_errors(formFilter.inicio)}}
               {{ form_label(formFilter.inicio)}}
               {{ form_widget(formFilter.inicio,{'attr' : {'class' : 'inicio data'}})}}
        </div>

        <div class='picker bold'>
               {{ form_errors(formFilter.fim)}}
               {{ form_label(formFilter.fim)}}
               {{ form_widget(formFilter.fim,{'attr' : {'class' : 'fim data'}})}}
        </div>

        <div class="bold">
               {{ form_errors(formFilter.conta)}}
               {{ form_label(formFilter.conta)}}
               {{ form_widget(formFilter.conta,{'attr' : {'class' : 'conta'}})}}
        </div>

        <div class="bold">
               {{ form_errors(formFilter.tipo)}}
               {{ form_label(formFilter.tipo)}}
               {{ form_widget(formFilter.tipo,{'attr' : {'class' : 'tipo'}})}}
        </div>

        <div class="bold">
               {{ form_errors(formFilter.categoria)}}
               {{ form_label(formFilter.categoria)}}
               {{ form_widget(formFilter.categoria,{'attr' : {'class' : 'categoria'}})}}
        </div>

        <div class="bold">
               {{ form_errors(formFilter.doc)}}
               {{ form_label(formFilter.doc)}}
               {{ form_widget(formFilter.doc,{'attr' : {'class' : 'doc', 'style':'width:40px'}})}}
        </div>
        <input id="filtrarGeral" type="button" value="Filtrar">
    </form>
</div>
<hr style="margin-top: 1%; margin-bottom:1%">
