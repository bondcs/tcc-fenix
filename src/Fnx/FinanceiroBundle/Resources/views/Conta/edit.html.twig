{% extends 'FnxAdminBundle::layout.html.twig' %}

{% block title %} Conta {% endblock %}

{% block menuContent %}
    <div id="menuContent">
        <h3>Financeiro: Formul√°rio de Conta</h3>
        <ul>
            <li><a class="back-link" href="{{ path('financeiro_conta')}}"><span></span>Voltar</a></li>
        </ul> 
    </div>
{% endblock %}

{% block conteudo %}
 <div class="ui-panel-content ui-widget-content " style="width:auto">
    <h4 class="ui-panel-title ui-widget-header ">Conta</h4>
    <div id="box-form">
        <form class="cms" action="{{ path('financeiro_conta_update', {'id' : entity.id}) }}" method="post" {{ form_enctype(form) }}>
            <div class="myform">
                <div class='inputExtendido'>
                     {{ form_errors(form.nome)}}
                     {{ form_label(form.nome)}}    
                     {{ form_widget(form.nome)}}
                </div>
                
                <div>
                     {{ form_errors(form.instancia)}}
                     {{ form_label(form.instancia)}}    
                     {{ form_widget(form.instancia)}}
                </div>
                    
                <div>
                     {{ form_errors(form.valor)}}
                     {{ form_label(form.valor)}}    
                     {{ form_widget(form.valor,{'attr' : {'class' : 'moeda', 'style' : 'width:20%'}})}}
                </div>
                    
                <div>
                     {{ form_errors(form.descricao)}}
                     {{ form_label(form.descricao)}}    
                     {{ form_widget(form.descricao)}}
                </div>        
            </div>

            {{ form_rest(form)}}
            <input type="submit" value="Submit"/>
        </form>
    </div>
 </div>
{% endblock %}
