<div class="box-filter">
    <form class="filter" method="POST" action="">
        {{form_errors(formFilter)}}
        <div class='picker'>
               {{ form_errors(formFilter.inicio)}}
               {{ form_label(formFilter.inicio)}}    
               {{ form_widget(formFilter.inicio,{'attr' : {'class' : 'inicio data'}})}}
        </div>
            
        <div class='picker'>
               {{ form_errors(formFilter.fim)}}
               {{ form_label(formFilter.fim)}}    
               {{ form_widget(formFilter.fim,{'attr' : {'class' : 'fim data'}})}}
        </div>
            
        <div>
               {{ form_errors(formFilter.tipo)}}
               {{ form_label(formFilter.tipo)}}    
               {{ form_widget(formFilter.tipo,{'attr' : {'class' : 'tipo'}})}}
        </div>
            
        <input id="filtrar" type="button" value="Filtrar">
    </form>
</div>    
<div style="margin: 3px 3px; margin-top: 1.5%;" class="box-table" >
    <table class="tableTransacoes redraw" conta="{{entity.id}}">
        <thead>
            <tr>
                <th>Data</th>
                <th>Descrição</th>
                <th>Forma</th>
                <th>Tipo</th>
                <th style="width: 12%">Valor(R$)</th>
                <th class="hide">id</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
        <tfoot>
           <tr>
              <th colspan="4" style="text-align: right">Total:</th>
              <th colspan="1" style="text-align: center"></th>
           </tr>  
        </tfoot>
    </table>
</div>
